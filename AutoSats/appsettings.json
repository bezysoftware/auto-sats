{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "AutoSatsDatabase": "Data Source=db/AutoSats.db"
  },

  "Bitcoin": {
    "Url": "http://localhost:8332",
    "Auth": "<username>:<password>"
  },

  "Exchanges": [
    {
      "Name": "Bitstamp",
      "Key1Name": "API Key",
      "Key2Name": "API Secret",
      "Key3Name": "User ID",
      "ApiUrl": "https://www.bitstamp.net/settings/access-control/api/",
      "ApiName": "API Access",
      "FallbackWithdrawalFee": 0.00050000,
      "Permissions": [ "Account balance", "Buy limit/market orders" ],
      "Hint": "User ID can be found on the 'Change password' page in Settings."
    },
    {
      "Name": "Poloniex",
      "Key1Name": "API Key",
      "Key2Name": "Secret",
      "ApiUrl": "https://poloniex.com/apiKeys",
      "ApiName": "API Keys",
      "ReverseCurrencies": true,
      "FallbackWithdrawalFee": 0,
      "BuyOrderType": "Limit",
      "Permissions": [ "Trading" ]
    },
    {
      "Name": "Coinbase",
      "Key1Name": "API Key",
      "Key2Name": "API Secret",
      "Key3Name": "Passphrase",
      "ApiUrl": "https://pro.coinbase.com/profile/api",
      "ApiName": "API Settings",
      "FallbackWithdrawalFee": 0,
      "Permissions": [ "View", "Trade" ]
    },
    {
      "Name": "Bitfinex",
      "Key1Name": "API key",
      "Key2Name": "API key secret",
      "ApiUrl": "https://setting.bitfinex.com/api#createkey",
      "ApiName": "API key Management",
      "Permissions": [ "Create and cancel orders", "Get wallet balances and addresses" ]
    }
  ]
}
