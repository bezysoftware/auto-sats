{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "AutoSatsDatabase": "Data Source=db/AutoSats.db"
  },

  "Bitcoin": {
    "Url": "http://localhost:8332",
    "Auth": "<username>:<password>"
  },

  "Exchanges": [
    {
      "Name": "Bitstamp",
      "Key1Name": "API Key",
      "Key2Name": "API Secret",
      "Key3Name": "User ID",
      "ApiUrl": "https://www.bitstamp.net/settings/access-control/api/",
      "ApiName": "API Access",
      "Permissions": [ "Account balance", "Buy limit/market orders" ],
      "Hint": "User ID can be found on the 'Change password' page in Settings."
    },
    {
      "Name": "Binance",
      "Key1Name": "Client ID",
      "Key2Name": "API Key",
      "ApiUrl": "https://www.binance.com/en/my/settings/api-management",
      "ApiName": "API Management"
    }
  ]
}
