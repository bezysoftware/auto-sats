@inherits LayoutComponentBase

<div class="site-root">
    <Layout Class="site-layout">
        <Header>
            <AppHeader />
        </Header>
        <Layout>
            <div class="site-layout-content">@Body</div>
        </Layout>
        <Footer Class="app-footer">
            <AppFooter />
        </Footer>
    </Layout>
</div>
<style>
    .site-root {
        overflow: auto;
        height: 100vh;
    }

    .site-layout {
        min-height: 100vh;
        display: flex;
    }

    .site-layout-content {
        width: 800px;
        align-self: center;
        height: 100%;
    }

    .app-footer {
        padding: 0;
        margin-top: 48px;
    }

    @@media(max-width: 800px) {
        .site-layout-content {
            width: 100%;
        }    
    }
</style>
